@model ChemAnalyst.ViewModel.CompanyProfAndCompanyProductRelationFormViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="update-profile-wrapper">


        <div class="white-wrapper" style="padding-top:10px">

            <div class="data-detail-wrapper table-responsive">

                @using (Html.BeginForm("SaveCompanyAndProductRelation", "CompanyAndProductRelation", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.DisplayNameFor(p => p.CompanyProfId)
                        @Html.DropDownListFor(p => p.CompanyProfId, new SelectList(Model.CompanyProf, "Id", "Name"), "Select....", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            @for (int i = 0; i < Model.CompanyProduct.Count(); i++)
                            {
                                @Html.CheckBoxFor(p => Model.CompanyProduct[i].IsSelected) <span style="padding-right: 2px;"></span> @Html.DisplayFor(p => Model.CompanyProduct[i].ProductName) <span style="padding-right: 15px;"></span>
                                @Html.HiddenFor(p => Model.CompanyProduct[i].id)
                            }
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Save</button>
                }


            </div>

        </div>

    </div>

