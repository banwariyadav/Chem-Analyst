@model ChemAnalyst.ViewModel.DealsHomeViewModel


@using PagedList.Mvc;
@using PagedList;


@{
    if (Session["UserRole"] != null && Session["UserRole"].ToString().ToUpper() == "CUSTOMER")
    {
        Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutUser2.cshtml";
    }

}

    <body>
        <style>
            ::placeholder { /* Firefox, Chrome, Opera */
                color: #fff;
            }

            :-ms-input-placeholder { /* Internet Explorer 10-11 */
                color: #fff;
            }

            ::-ms-input-placeholder { /* Microsoft Edge */
                color: #fff;
            }
        </style>

        @if (Session["UserRole"] == null)
        {

            <div class="inner-banner">
                <img src="~/images/about-banner.jpg">
                <h1>Deals</h1>

                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Deals</li>
                </ol>

            </div>
        }

        @if (Session["UserRole"] == null)
            {

            }
            else
            {
            <style>
                .addMargin {
                    margin-left: 10px;
                }
            </style>
        }

        <div class="page-content">
            <div class="static-page">
                <div class="container addMargin">

                    @* <div class="blog-list">*@
                    <div>

                        <div class="row">
                            @if (Session["UserRole"] == null)
                            {
                                <div class="col-lg-12">
                                    <div class="searchbox">
                                        @using (Html.BeginForm("DealsHome", "NewsAndDeals", null, FormMethod.Post, new { @class = "row", enctype = "multipart/form-data" }))
                                        {
                                            <div class="col-md-3">
                                                @Html.TextBoxFor(m => m.search,
                                             new { @id = "search", @class = "plbxt btn btn-primary fromdate width100", @placeholder = "From date", @autocomplete = "off" })

                                            </div>
                                            <div class="col-md-3">
                                                @Html.TextBoxFor(m => m.searchto,
                                             new { @id = "searchto", @class = "plbxt btn btn-primary todate width100", @placeholder = "To date", @autocomplete = "off" })
                                            </div>
                                            <div class="col-md-3 pl-0">
                                                @Html.TextBoxFor(m => m.keyword,
                                     new { @id = "keyword", @placeholder = "Keyword", @class = "  btn btn-primary width100" })


                                            </div>
                                            <div class="col-md-2 pl-0">
                                                <button type="submit" class="btn btn-green">
                                                    <i class="fa fa-filter"></i>
                                                    Filter
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-12">
                                    <p>&nbsp;</p>
                                </div>

                                <div class="col-lg-12">
                                    <div class="searchbox">
                                        @using (Html.BeginForm("DealsHome", "NewsAndDeals", null, FormMethod.Post, new { @class = "row", enctype = "multipart/form-data" }))
                                        {
                                            <div class="col-md-3">
                                                @Html.TextBoxFor(m => m.search,
                                             new { @id = "search", @class = "plbxt btn btn-primary fromdate width100", @placeholder = "From date", @autocomplete = "off" })

                                            </div>
                                            <div class="col-md-3">
                                                @Html.TextBoxFor(m => m.searchto,
                                             new { @id = "searchto", @class = "plbxt btn btn-primary todate width100", @placeholder = "To date", @autocomplete = "off" })
                                            </div>
                                            <div class="col-md-3 pl-0">
                                                @Html.TextBoxFor(m => m.keyword,
                                     new { @id = "keyword", @placeholder = "Keyword", @class = "  btn btn-primary width100" })


                                            </div>
                                            <div class="col-md-2 pl-0">
                                                <button type="submit" class="btn btn-green">
                                                    <i class="fa fa-filter"></i>
                                                    Filter
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            <p> &nbsp;</p>
                            <div class="width100" style="height:30px"></div>


                            @foreach (var item in Model.DealsList)
                            {

                                <div class="col-lg-12">
                                    <p>&nbsp;</p>
                                </div>
                                <div class="col-md-6 col-sm-6">

                                    <div class="post-item clearfix">

                                        <div class="row">

                                            <div class="col-md-4 col-sm-4 themestek-box-img-left">
                                                <div class="news-pic">
                                                    @*<img src="~/ProductImages/@Model.DealsList.First().DealsImg" alt="">*@
                                                    <img src="~/images/dealss.png" alt="">
                                                </div>
                                            </div>
                                            <script>

                                                function showmodel() {
                                                    $("#myModal").show();
                                                }
                                            </script>
                                            <div class="themestek-box-content col-md-8 col-sm-8">
                                                <div class="news-text">
                                                    <h4>
                                                    
                                                    @if (ChemAnalyst.DAL.ProductDataStore.GetProductDealReletion(item.id, ViewBag.f))


                                                    {<a href="@Url.Action("DealsDetails", "NewsAndDeals", new { id = item.GenerateItemNameAsParam() })">@Model.DealsList.First().DealsName </a>
                                                    }
                                                    else
                                                    {
                                                        <a onclick="showmodel()">@Model.DealsList.First().DealsName </a>
                                                    }

                                                     </h4>
                                                    <p>@(item.DealsDiscription.Length > 100 ? (item.DealsDiscription.Substring(0, 100)) : item.DealsDiscription)...</p>

                                                    <div class="row mt-3">
                                                        <div class="col-6">
                                                        
                                                        @if (ChemAnalyst.DAL.ProductDataStore.GetProductDealReletion(item.id, ViewBag.f))
                                                        {
                                                        <a href="@Url.Action("DealsDetails", "NewsAndDeals", new { id = item.GenerateItemNameAsParam() })">Read More <i class="fa fa-arrow-right"></i></a>

                                                        }
                                                        else
                                                        {

                                                            <a onclick="showmodel()">Read More <i class="fa fa-arrow-right"></i></a>


                                                        }
                                                        
                                                        </div>
                                                        <div class="col-6"> <i class="fa fa-clock-o"></i>@item.CreatedTime.Value.Date.ToString("MMM/yyyy") </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            }
                        </div>

                    </div>
                    @Html.PagedListPager(Model.DealsList, page => Url.Action("DealsHome", new { page }))
                </div>
            </div>
        </div>




        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="login-pic">
                                    <div class="freeSub">
                                        <h2>Get Chemical Pricing in few-clicks.</h2>
                                        <a href="@Url.Action("FreeTrail", "ChemAnalyst")" class="btn btn-yellow">Start your Free Trail today.</a>
                                        <a href="@Url.Action("FreeTrail", "ChemAnalyst")" class="text-center">Click here to subscribe free trial to enjoy our benefits!</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script src="../js/jquery.js"></script>
        <script src="../js/jquery-3.3.1.slim.min.js"></script>
        <script src="../js/popper.min.js"></script>
        <script src="../js/bootstrap.min.js"></script>
        @*<script src="http://cdnjs.cloudflare.com/ajax/libs/simplelightbox/1.17.1/simple-lightbox.js"></script>*@
        <script src="../js/owl.carousel.js"></script>
        <script src="../js/wow.min.js"></script>
        <script>

            $(function () {

                jQuery('.fromdate').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    onSelect: function (selected) {

                    }
                });
                jQuery('.todate').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    onSelect: function (selected) {



                    }
                });
                var d = new Date();

                $('.fromdate').val('@ViewBag.formdate');
                $('.todate').val('@ViewBag.todate');
            });
        </script>
    </body>
