    <div class="inner-banner">
        <img src="~/images/about-banner.jpg">
        <h1>Industry Report</h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Reportsection", "Industry")">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Industry Report</li>
        </ol>

    </div>


    <div class="page-content">
        <div class="static-page">
            <div class="container">

                <div class="row">

                    <div class="col-md-9">
                        @foreach (var ind in Model.Industry)
                        {
                            <div class="industry-text">
                                <h3>@ChemAnalyst.DAL.ProductDataStore.GetCategory(ind.CategoryID) | @ind.CreatedTime.Value.ToString("MMM-yyyy") </h3>
                                <h3>@ind.Title </h3>
                                <p>Format: @Html.Raw(WebUtility.HtmlDecode(@ind.format)) </p>
                                @*<p>Pages: @ind.Pages</p>*@
                                <p>Pages: @Html.Raw(WebUtility.HtmlDecode(@ind.Pages))</p>
                                <p>Industry: @ind.Industry</p>
                            </div>

                            <div class="mains-indus-tabs">

                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#home">Description</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#menu1">Table of Content</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#menu2">Figure of Tablets</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#menu3">Related Reports</a>
                                    </li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div id="home" class="container tab-pane active">
                                        <br /><p>@Html.Raw(WebUtility.HtmlDecode(@ind.Description))</p>
                                    </div>
                                    <div id="menu1" class="container tab-pane fade">
                                        <br /><p>@Html.Raw(WebUtility.HtmlDecode(@ind.Tableoc))</p>
                                    </div>
                                    <div id="menu2" class="container tab-pane fade">
                                        <br /><p>@Html.Raw(WebUtility.HtmlDecode(@ind.Figot))</p>
                                    </div>

                                    <div id="menu3" class="container tab-pane fade">
                                        <br /><p>@Html.Raw(WebUtility.HtmlDecode(@ind.RelatedRep))</p>
                                    </div>

                                </div>

                            </div>
                        }
                    </div>

                    <div class="col-md-3">

                        <aside>

                            <div class="subscription-btn"><a style="background:#7db11a" href="@Url.Action("FreeTrail", "ChemAnalyst")">View Sample Report</a></div>

                            <div class="side-news-feed">

                                <h3><i class="fa fa-bell-o"></i> News</h3>
                                @foreach (var item in Model.NewsList)
                                {
                                    <div class="news-feed-col">
                                        <a href="@Url.Action("NewsDetails", "NewsAndDeals", new { id = item.GenerateItemNameAsParam() })">
                                            @if (item.NewsImg != string.Empty)
                                            {
                                                <div class="left-news-pic"><img src="~/ProductImages/@item.NewsImg" alt=""></div>
                                                <div class="right-news-desc">
                                                    <p>@(item.NewsDiscription.Length > 50 ? (item.NewsDiscription.Substring(0, 50)) : item.NewsDiscription)...</p>
                                                    <p><i class="fa fa-clock-o"></i>@item.CreatedTime.ToShortDateString()</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="right-newsdesc">
                                                    <p>@(item.NewsDiscription.Length > 50 ? (item.NewsDiscription.Substring(0, 50)) : item.NewsDiscription)...</p>
                                                    <p><i class="fa fa-clock-o"></i>@item.CreatedTime.ToShortDateString()</p>
                                                </div>
                                            }
                                        </a>
                                    </div>
                                }
                            </div>

                            <div class="side-news-feed mt-4">

                                <h3><i class="fa fa-thumbs-up"></i> Top Deals</h3>
                                @foreach (var item in Model.DealsList)
                                {
                                    <div class="news-feed-col">
                                        <a href="@Url.Action("DealsDetails", "NewsAndDeals", new { id = item.GenerateItemNameAsParam() })">
                                            @if (item.DealsImg != string.Empty)
                                            {
                                                <div class="left-news-pic"><img src="~/ProductImages/@item.DealsImg" alt=""></div>
                                                <div class="right-news-desc">
                                                    <p>@(item.DealsDiscription.Length > 50 ? (item.DealsDiscription.Substring(0, 50)) : item.DealsDiscription)...</p>
                                                    <p><i class="fa fa-clock-o"></i>@item.CreatedTime.Value.ToShortDateString()</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="right-newsdesc">
                                                    <p>@(item.DealsDiscription.Length > 50 ? (item.DealsDiscription.Substring(0, 50)) : item.DealsDiscription)...</p>
                                                    <p><i class="fa fa-clock-o"></i>@item.CreatedTime.Value.ToShortDateString()</p>
                                                </div>
                                            }

                                        </a>
                                    </div>
                                }
                            </div>

                        </aside>

                    </div>

                </div>

            </div>
        </div>
    </div>





