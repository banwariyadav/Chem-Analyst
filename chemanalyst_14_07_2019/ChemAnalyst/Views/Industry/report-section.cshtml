                                            <tr>
                                                <td>
                                                    <h5 class="sm_heading_rs" style="">
                                                        <a href="@Url.Action("IndustryReport", "Industry", new { id= item .id})">@item.Title</a>
                                                    </h5>
                                                    <p class="text-justify">
                                                        @Html.Raw(WebUtility.HtmlDecode(@item.Description))
                                                    <span style="white-space:nowrap"><a style="margin-left:8px;" href="@Url.Action("IndustryReport", "Industry", new { id= item .id})" class="read-more-l">Read More</a></span>
                                                </p>
                                                <ul class="r_ul">
